{
    "compilerOptions": {
        "strict": true,
        "target": "ESNext",
        "module": "ESNext",
        "baseUrl": ".",
        "rootDir": ".",
        "outDir": "dist",
        "declaration": true,
        "skipLibCheck": true,
        "importHelpers": true,
        "isolatedModules": false,
        "esModuleInterop": false,
        "moduleDetection": "force",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "lib": [
            "DOM",
            "ESNext"
        ],
        "types": [
            "node"
        ],
        "paths": {
            "@errors/*": [
                "src/errors/*"
            ],
            "@plugins/*": [
                "src/plugins/*"
            ],
            "@services/*": [
                "src/services/*"
            ],
            "@typescript/*": [
                "src/modules/typescript/*"
            ],
            "@providers/*": [
                "src/providers/*"
            ],
            "@components/*": [
                "src/components/*"
            ],
            "@configuration/*": [
                "src/configuration/*"
            ]
        }
    },
    "include": [
        "src/cli.ts",
        "src/index.ts",
        "includes/**/*.d.ts"
    ],
    "exclude": [
        "dist",
        "node_modules",
        "**/*.spec.ts"
    ]
}
