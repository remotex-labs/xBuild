{
    "compilerOptions": {
        "strict": true,
        "target": "ESNext",
        "module": "ESNext",
        "rootDir": "src",
        "outDir": "dist",
        "declaration": true,
        "skipLibCheck": true,
        "importHelpers": true,
        "isolatedModules": false,
        "esModuleInterop": false,
        "moduleDetection": "force",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "lib": [
            "DOM",
            "ESNext"
        ],
        "types": [
            "node"
        ],
        "paths": {
            "@errors/*": [
                "./src/errors/*"
            ],
            "@services/*": [
                "./src/services/*"
            ],
            "@providers/*": [
                "./src/providers/*"
            ],
            "@directives/*": [
                "./src/directives/*"
            ],
            "@constants/*": [
                "./src/constants/*"
            ],
            "@components/*": [
                "./src/components/*"
            ],

            "@interfaces/*": [
                "./src/interfaces/*"
            ],
            "@argv/*": [
                "./src/modules/argv/*"
            ],
            "@server/*": [
                "./src/modules/server/*"
            ],
            "@symlinks/*": [
                "./src/modules/symlinks/*"
            ],
            "@observable/*": [
                "./src/modules/observable/*"
            ],
            "@typescript/*": [
                "./src/modules/typescript/*"
            ]
        }
    },
    "include": [
        "src/bash.ts",
        "src/index.ts",
        "includes/**/*.d.ts"
    ],
    "exclude": [
        "dist",
        "node_modules",
        "**/*.spec.ts"
    ]
}
